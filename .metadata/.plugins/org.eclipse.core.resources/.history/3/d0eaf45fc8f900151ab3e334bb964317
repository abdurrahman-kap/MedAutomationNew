			waitFor(3);
			clickOnChooseDateandTime ();
			waitFor(3);
			clickOnStartDate("04/04/2016");
			waitFor(3);
			clickOnStartTime("9:00am");
			waitFor(3);
			clickOnEndTimeTime("12:30pm");
			waitFor(3);
			clickOnenddate("04/04/2016");
			waitFor(3);
			clickOnAddstudent();
			waitFor(30);
		}

